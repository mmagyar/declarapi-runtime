{
  "compilerOptions": {
    "module": "es6",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "outDir": "./",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strict": true,
    "declaration": true,
    "inlineSources": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "rootDirs": [
      "./src"
    ],
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "esnext", "dom"],
  },

  "include": [
    "src/**/*.ts", "src/process.spec._ts", "src/kv._ts", "src/contractValidation.spec._ts", "src/registerRestMethods.spec._ts"
  ],
  "exclude": [ "node_modules" ]
}
